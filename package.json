{
    "name": "aframe-tangram-terrain-component",
    "version": "1.1.0",
    "description": "A Tangram terrain component for A-Frame.",
    "main": "index.js",
    "cdn": "dist/aframe-tangram-terrain-component.min.js",
    "scripts": {
        "build": "browserify examples/main.js -t yamlify -o examples/build.js",
        "dev": "budo examples/main.js:build.js --dir examples --port 8000 --live -- -t yamlify",
        "dist": "webpack index.js dist/aframe-tangram-terrain-component.js && webpack -p index.js dist/aframe-tangram-terrain-component.min.js",
        "lint": "semistandard -v --fix | snazzy",
        "prepublish": "npm run dist",
        "preghpages": "npm run build && shx rm -rf gh-pages && shx mkdir gh-pages && shx cp -r examples/* gh-pages",
        "ghpages": "npm run preghpages && ghpages -p gh-pages",
        "start": "npm run dev",
        "test": "karma start ./tests/karma.conf.js",
        "test:firefox": "karma start ./tests/karma.conf.js --browsers Firefox",
        "test:chrome": "karma start ./tests/karma.conf.js --browsers Chrome"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mattrei/aframe-tangram-terrain-component"
    },
    "keywords": [
        "aframe",
        "aframe-component",
        "aframe-vr",
        "vr",
        "mozvr",
        "webvr",
        "tangram",
        "terrain"
    ],
    "author": "Matthias Treitler <matthias.treitler@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mattrei/aframe-tangram-terrain-component/issues"
    },
    "homepage": "https://github.com/mattrei/aframe-tangram-terrain-component#readme",
    "devDependencies": {
        "aframe": "^0.7.1",
        "browserify": "^13.0.0",
        "budo": "^9.4.7",
        "chai": "^3.4.1",
        "chai-shallow-deep-equal": "^1.3.0",
        "ghpages": "^0.0.8",
        "karma": "^0.13.15",
        "karma-browserify": "^4.4.2",
        "karma-chai-shallow-deep-equal": "0.0.4",
        "karma-chrome-launcher": "2.0.0",
        "karma-env-preprocessor": "^0.1.1",
        "karma-firefox-launcher": "^0.1.7",
        "karma-mocha": "^0.2.1",
        "karma-mocha-reporter": "^1.1.3",
        "karma-sinon-chai": "^1.3.3",
        "mocha": "^2.3.4",
        "semistandard": "^8.0.0",
        "shelljs": "^0.7.0",
        "shx": "^0.1.1",
        "sinon": "^1.17.5",
        "sinon-chai": "^2.14.0",
        "snazzy": "^4.0.0",
        "three.fbo-helper": "^1.1.0",
        "webpack": "^3.0.0",
        "yamlify": "^0.1.3",
        "yml-loader": "^2.1.0"
    },
    "dependencies": {
        "cuid": "^1.3.8",
        "leaflet": "^1.2.0",
        "tangram": "^0.14.1"
    },
    "semistandard": {
        "ignore": [
            "examples/build.js",
            "dist/**"
        ]
    }
}
